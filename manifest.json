{
  "manifest_version": 2,
  "name": "Replaycer",
  "description": "Have fun by replacing text for the web",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/emoji-substitution",
  "version": "1.0",
  "icons": {
    "48": "icons/icon.png",
    "96": "icons/icon@2x.png"
  },
  "permissions" : [
    "activeTab"
  ],

  "browser_action" : {
	  "default_icon": "icons/icon.png",
	  "default_title": "Replaycer",
	  "default_popup": "popup/replace_text.html"
  }
}